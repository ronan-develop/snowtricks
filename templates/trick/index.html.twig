{% extends 'base.html.twig' %} {% block title %}Hello TrickController!{%
endblock %} {% block body %} {{ include("components/_navbar.html.twig") }}
<div class="hero">
  <header class="container">
    <hgroup>
      <h1>{{ trick.name }}</h1>
      {% for category in trick.category %} {% if trick.category |length > 1
        %}
        <span class="badge">{{ category.name }}</span>
        {% else %}
        <span class="badge">{{ category.name }}</span>
        {% endif %} {% endfor %}
      </hgroup>
      <figure>
        <img
        src="/uploads/tricks/{{ trick.image }}"
        alt="position regular"
        width="100%"
        height="auto"
        />
        {% if app.user %}
        <div class="handle">
          <a href="{{ ea_url()
            .setController('App\\Controller\\Admin\\TrickCrudController')
            .setAction('edit')
            .setEntityId(trick.id)
           }}">
            <i class="fa-solid fa-pen"></i>
          </a>
          <a href="{{ path('app_account') }}">
            <i class="fa-solid fa-trash"></i>
          </a>
        </div>
        {% endif %}
    </figure>
  </header>
</div>

<div class="container">
  <p>{{ trick.description }}</p>

  <h3>Messages</h3>

  {# {% if comments %} {% for comment in trick.comments %}
  <span>{{ date_comment |format_datetime()  }}</span> par
  <span>{{ comment.user }}</span>

  <div class="content">
    {{ comment.content }}
  </div>
  {% endfor %} {% endif %} #}
</div>
{% if app.user %}
<div class="container">
  <span class="line"></span>
  <h3>Ajouter un commentaire :</h3>
  <article
    class="comment-card"
    style="background: none; margin: auto; padding: 0"
  >
    {{ form_start(comment_form) }}
    {{ form_row(comment_form.content) }}
    {{ form_end(comment_form) }}
  </article>
</div>
{% else %}
<div class="container"></div>
{% endif %} {% endblock %}
